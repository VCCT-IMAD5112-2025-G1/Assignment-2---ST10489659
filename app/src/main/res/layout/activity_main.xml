<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/quizletto__1_"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/FlashcardQuiz"
        android:layout_width="389dp"
        android:layout_height="154dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="387dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="190dp"
        android:fontFamily="sans-serif-black"
        android:text="Welcome to the ultimate quiz showdown! Tap 'START' to prove your brilliance!"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="152dp"
        android:layout_height="59dp"
        android:layout_marginStart="129dp"
        android:layout_marginTop="607dp"
        android:layout_marginEnd="130dp"
        android:layout_marginBottom="65dp"
        android:text="START"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>